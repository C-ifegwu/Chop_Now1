# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
DATABASE_URL=./database/chopnow.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ENCRYPTION_KEY=your-32-character-secret-key-here
SESSION_SECRET=your-session-secret-change-this-in-production-minimum-32-characters
BCRYPT_ROUNDS=12

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=ChopNow <noreply@chopnow.com>

# Payment Gateway Configuration
# Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Stripe (Alternative)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Mobile Money Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_PASSKEY=your_mpesa_passkey

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
API_RATE_LIMIT_MAX=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.com/csp-report

# Application URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
RESET_PASSWORD_URL=http://localhost:3000/reset-password
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email

# Third-party Service URLs
PAYSTACK_BASE_URL=https://api.paystack.co
GOOGLE_MAPS_BASE_URL=https://maps.googleapis.com/maps/api

# Business Configuration
PLATFORM_FEE_PERCENTAGE=5
MIN_ORDER_VALUE=2.00
MAX_ORDER_VALUE=500.00
DEFAULT_PICKUP_WINDOW_HOURS=2
ORDER_EXPIRY_HOURS=24

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=false

# Development/Testing Configuration
SEED_DATABASE=true
ENABLE_API_DOCS=true
ENABLE_CORS=true
TRUST_PROXY=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# TRUST_PROXY=true
# ENABLE_API_DOCS=false
# SEED_DATABASE=false
