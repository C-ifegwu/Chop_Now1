{
  "name": "chopnow-backend",
  "version": "1.0.0",
  "description": "Backend API for ChopNow food rescue platform",
  "main": "src/server.js",
  "scripts": {
    "start": "mkdir -p uploads && node src/server.js",
    "build": "echo 'No build step required' && exit 0",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/server.js",
    "dev:frontend": "cd chopnow-frontend && npm run dev -- -p 3001",
    "test": "jest"
  },
  "keywords": [
    "food-rescue",
    "api",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
