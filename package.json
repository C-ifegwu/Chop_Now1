{
  "name": "chopnow-backend",
  "version": "1.0.0",
  "description": "Backend API for ChopNow food rescue platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "build": "echo 'No build step required' && exit 0",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "node database/seed.js",
    "db:backup": "node scripts/backup-db.js",
    "db:restore": "node scripts/restore-db.js",
    "logs:clean": "node scripts/clean-logs.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "food-rescue",
    "api",
    "express",
    "sustainability",
    "food-waste-reduction"
  ],
  "author": "ChopNow Team",
  "license": "ISC",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chopnow/chopnow-backend.git"
  },
  "bugs": {
    "url": "https://github.com/chopnow/chopnow-backend/issues"
  },
  "homepage": "https://github.com/chopnow/chopnow-backend#readme"
}